---
import { zfd } from 'zod-form-data';

import Layout from '@layouts/Layout.astro';
import InputField from '@components/InputField.astro';
import SelectField from '@components/SelectField.astro';
import ErrorMessage from '@components/ErrorMessage.astro';
import { handleFormErrors } from '@utils/handleFormErrors';
import { FuelService } from '@services/fuel';

const TODAY_STR = new Date().toISOString().split('T')[0] as string;
const VAT_DEDUCTION_OPTIONS = [0, 0.5, 1] as const;

const schema = zfd.formData({
  date: zfd.text().optional().default(TODAY_STR),
  city: zfd.text(),
  station: zfd.text(),
  mileage: zfd.numeric(),
  amount: zfd.numeric(),
  cost: zfd.numeric(),
  deduction: zfd.numeric(),
});
const errors = {
  date: '',
  city: '',
  station: '',
  mileage: '',
  amount: '',
  cost: '',
  deduction: '',
  _error: '',
};

if (Astro.request.method === 'POST') {
  try {
    const data = schema.parse(await Astro.request.formData());
    const fuelService = await FuelService.init();
    await fuelService.add(data);

    return Astro.redirect('/success');
  } catch (error) {
    handleFormErrors(errors, error);
  }
}
---

<Layout title="Paliwo">
  <div>
    <h1>Dodaj tankowanie</h1>
    <form method="POST">
      <InputField
        class="mt-2"
        name="date"
        type="date"
        label="Data"
        error={errors.date}
        value={TODAY_STR}
      />
      <InputField class="mt-2" name="city" type="text" label="Miasto" error={errors.city} />
      <InputField class="mt-2" name="station" type="text" label="Stacja" error={errors.station} />
      <InputField
        class="mt-2"
        name="mileage"
        type="number"
        min="0"
        step="1"
        label="Przebieg (km)"
        error={errors.mileage}
      />
      <InputField
        class="mt-2"
        name="amount"
        type="number"
        min="0"
        step="0.01"
        label="Ilość (l)"
        error={errors.amount}
      />
      <InputField
        class="mt-2"
        name="cost"
        type="number"
        min="0"
        step="0.01"
        label="Koszt (zł)"
        error={errors.cost}
      />
      <SelectField
        class="mt-2"
        label="Odliczenie VAT"
        name="deduction"
        options={VAT_DEDUCTION_OPTIONS.map((value) => ({
          value: value.toString(),
          label: value * 100 + '%',
        }))}
        selected={VAT_DEDUCTION_OPTIONS[1].toString()}
      />

      <div class="form-control mt-4 w-full max-w-xs">
        <input type="submit" value="Dodaj" class="btn-primary btn" />
        <ErrorMessage error={errors._error} />
      </div>
    </form>
  </div>
</Layout>
