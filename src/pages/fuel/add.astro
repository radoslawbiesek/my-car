---
import z from 'zod';
import { zfd } from 'zod-form-data';

import Layout from '@layouts/Layout.astro';
import InputField from '@components/InputField.astro';
import SelectField from '@components/SelectField.astro';
import ErrorMessage from '@components/ErrorMessage.astro';
import { handleFormErrors } from '@utils/handleFormErrors';
import { FuelService } from '@services/fuel';

const TODAY_STR = new Date().toISOString().split('T')[0] as string;
const VAT_DEDUCTION_OPTIONS = ['0%', '50%', '100%'] as const;
const DEFAULT_STATION = 'Orlen';

const schema = zfd.formData({
  date: zfd.text().optional().default(TODAY_STR),
  city: zfd.text(),
  station: zfd.text(),
  mileage: zfd.numeric(),
  amount: zfd.numeric(),
  cost: zfd.numeric(),
  deduction: z.union([z.literal('0%'), z.literal('50%'), z.literal('100%')]),
});
const errors = {
  date: '',
  city: '',
  station: '',
  mileage: '',
  amount: '',
  cost: '',
  deduction: '',
  _error: '',
};
const fuelService = FuelService.getInstance();

await fuelService.getAll();

if (Astro.request.method === 'POST') {
  try {
    const data = schema.parse(await Astro.request.formData());
    const fuelService = FuelService.getInstance();
    await fuelService.add(data);

    return Astro.redirect('/success');
  } catch (error) {
    handleFormErrors(errors, error);
  }
}
---

<Layout title="Paliwo">
  <h1>Dodaj tankowanie</h1>
  <form method="POST">
    <InputField
      class="mt-2"
      name="date"
      type="date"
      label="Data"
      error={errors.date}
      value={TODAY_STR}
    />
    <InputField class="mt-2" name="city" type="text" label="Miasto" error={errors.city} />
    <InputField
      class="mt-2"
      name="station"
      type="text"
      label="Stacja"
      error={errors.station}
      value={DEFAULT_STATION}
    />
    <InputField
      class="mt-2"
      name="mileage"
      type="number"
      min="0"
      step="1"
      label="Przebieg (km)"
      error={errors.mileage}
    />
    <InputField
      class="mt-2"
      name="amount"
      type="number"
      min="0"
      step="0.01"
      label="Ilość (l)"
      error={errors.amount}
    />
    <InputField
      class="mt-2"
      name="cost"
      type="number"
      min="0"
      step="0.01"
      label="Koszt (zł)"
      error={errors.cost}
    />
    <SelectField
      class="mt-2"
      label="Odliczenie VAT"
      name="deduction"
      options={VAT_DEDUCTION_OPTIONS.map((value) => ({
        value,
        label: value,
      }))}
      selected={VAT_DEDUCTION_OPTIONS[1]}
    />

    <div class="form-control mt-4 w-full max-w-xs">
      <input type="submit" value="Dodaj" class="btn-success btn-sm btn" />
      <ErrorMessage error={errors._error} />
    </div>
    <div class="form-control my-4 w-full max-w-xs">
      <a href="/fuel/list" class="btn-secondary btn-outline btn-sm btn">Cofnij</a>
    </div>
  </form>
</Layout>
